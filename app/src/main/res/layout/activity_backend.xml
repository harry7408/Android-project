<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="번호 : "
            android:textSize="20dp"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="2dp"
            ></TextView>
        <EditText
            android:id="@+id/Num1"
            android:hint="숫자를 입력하세요."
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginStart="10dp">
        </EditText>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="책 제목 : "
            android:textSize="20dp"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="2dp"
            ></TextView>
        <EditText
            android:id="@+id/Book1"
            android:hint="책 제목을 입력하세요."
            android:layout_width="match_parent"
            android:layout_height="48dp">
        </EditText>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="출판사  : "
            android:textSize="20dp"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="2dp"
            ></TextView>
        <EditText
            android:id="@+id/Publish1"
            android:hint="출판사를 입력하세요."
            android:layout_width="match_parent"
            android:layout_height="48dp">
        </EditText>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/Insert1"
            android:layout_width="180dp"
            android:layout_height="60dp"
            android:layout_marginStart="20dp"
            android:backgroundTint="#FD0505"
            android:text="추가"
            android:textSize="20dp"></Button>

        <Button
            android:id="@+id/Delete1"
            android:backgroundTint="#FD0505"
            android:layout_width="180dp"
            android:text="삭제"
            android:textSize="20dp"
            android:layout_height="60dp"
            android:layout_marginStart="20dp"></Button>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/Show1"
            android:text="조회"
            android:backgroundTint="#FD0505"
            android:textSize="20dp"
            android:layout_width="180dp"
            android:layout_height="60dp"
            android:layout_marginStart="20dp"></Button>
        <Button
            android:id="@+id/Search1"
            android:layout_width="180dp"
            android:text="구글 검색"
            android:textSize="20dp"
            android:backgroundTint="#FD0505"
            android:layout_height="60dp"
            android:layout_marginStart="20dp"></Button>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="48dp"
            android:layout_height="wrap_content"
            android:text="번호"
            android:textSize="20dp"
            android:layout_marginStart="10dp"></TextView>

        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="책 제목"
            android:textSize="20dp"
            android:layout_marginStart="10dp"
            ></TextView>
        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="출판사"
            android:textSize="20dp"
            android:layout_marginStart="10dp">

        </TextView>

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp">

        <TextView
            android:id="@+id/List1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:textSize="20dp"
            android:layout_marginStart="5dp"/>
    </ScrollView>


</LinearLayout>